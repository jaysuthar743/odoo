<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="print_reg">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2>Registration Id: <span style="color:blue" t-field="doc.reg_no"/></h2>
                            <br/><br/>
                            <h5>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Name:</strong>
                                        <span t-field="doc.customer_id"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Mobile No:</strong>
                                        <span t-field="doc.mobile_no"/>
                                    </div>
                                </div><br/>

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Birthdate:</strong>
                                        <span t-field="doc.birthdate"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Start Date:</strong>
                                        <span t-field="doc.start_date"/>
                                    </div>
                                </div><br/>

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Guest:</strong>
                                        <span t-field="doc.guest_ids.parent_name"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Room Type:</strong>
                                        <span t-field="doc.room_type_id"/>
                                    </div>
                                </div><br/>

                                 <div class="row">
                                    <div class="col-6">
                                        <strong>Room:</strong>
                                        <t t-foreach="doc.room_guest_line_ids" t-as="room">
                                            <span t-field="room.room_id"/><br/>
                                        </t>
                                    </div>
                                    <div class="col-6">
                                        <strong>Room Type:</strong>
                                        <span t-field="doc.room_type_id"/>
                                    </div>
                                </div><br/>


                            </h5>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>